{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
